%h1= humanize_type!(type)
%table.table.table-striped
  %thead
    %th.col-md-9 Name
    %th.col-md-3 Price
  - meals.each do |meal|
    %tr
      %td= meal.name
      %td
        = meal.price
        %small UAH
      - if defined?(f)
        %td.actions
          = f.radio_button "#{type}_id", meal.id, class: 'radio', checked: false, data: { type: meal.meal_type, price: meal.price }
